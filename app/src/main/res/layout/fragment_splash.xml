<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".features.MainActivity"
    android:background="@color/black"
    tools:ignore="HardcodedText">
    <TextView
        android:id="@+id/splashTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Completely &amp; Utterly Unnecessary Calculator"
        android:textColor="@color/purple"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="70dp"
        ></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <Button
            android:id="@+id/continueBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/black"
            android:background="@color/yellow"
            android:text="CONTINUE"
            android:textStyle="bold"
            android:textSize="50dp"/>

        <ImageView
            app:layout_constraintTop_toBottomOf="@id/splashTitle"
            app:layout_constraintRight_toRightOf="@id/continueBtn"
            app:layout_constraintLeft_toLeftOf="@id/continueBtn"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:src="@drawable/ic_launcher_foreground"
            tools:ignore="NotSibling">
        </ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
